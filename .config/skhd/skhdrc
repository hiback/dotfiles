##### Yabai #####
# Focus space
cmd - 0x2E: yabai -m space --focus 1 #m
cmd - 0x2B: yabai -m space --focus 2 #,
cmd - 0x2F: yabai -m space --focus 3 #.
cmd - 0x2C: yabai -m space --focus 4 #/
cmd - 0x29: yabai -m space --focus 5 #;

# Layout
cmd + ctrl - 0x2C: yabai -m window --toggle split #/
cmd + ctrl - r: yabai -m space --rotate 90
cmd + ctrl - 0x18: yabai -m space --balance #=

# Focus window
cmd - h: yabai -m window --focus west
cmd - j: yabai -m window --focus south
cmd - k: yabai -m window --focus north
cmd - l: yabai -m window --focus east

# Move window
cmd + shift - h: yabai -m window --swap west
cmd + shift - j: yabai -m window --swap south
cmd + shift - k: yabai -m window --swap north
cmd + shift - l: yabai -m window --swap east

# Resize window
cmd - left: yabai -m window --resize left:-50:0 ; yabai -m window --resize right:-50:0
cmd - right: yabai -m window --resize right:50:0 ; yabai -m window --resize left:50:0
cmd - up: yabai -m window --resize top:0:-50 ; yabai -m window --resize bottom:0:-50
cmd - down: yabai -m window --resize bottom:0:50 ; yabai -m window --resize top:0:50

# Move window to space
cmd + shift - 0x2E: yabai -m window --space 1; yabai -m space --focus 1
cmd + shift - 0x2B: yabai -m window --space 2; yabai -m space --focus 2
cmd + shift - 0x2F: yabai -m window --space 3; yabai -m space --focus 3
cmd + shift - 0x2C: yabai -m window --space 4; yabai -m space --focus 4
cmd + shift - 0x29: yabai -m window --space 5; yabai -m space --focus 5

# Window properties
cmd + ctrl - t : yabai -m window --toggle float
cmd + ctrl - s : yabai -m window --toggle sticky

##### macism #####
f13 : macism com.apple.keylayout.ABC
f14 : macism com.apple.inputmethod.SCIM.ITABC
f15 : macism com.apple.inputmethod.Kotoeri.RomajiTyping.Japanese
